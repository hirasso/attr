{
  "name": "hirasso/attr",
  "description": "A tiny HTML attribute generator written in PHP. Great for projects using tailwindcss and Alpine.js ðŸŽ¡",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Rasso Hilber",
      "email": "mail@rassohilber.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Hirasso\\Attr\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Hirasso\\Attr\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "~8.2 || ~8.3 || ~8.4 || ~8.5 || ~8.6"
  },
  "require-dev": {
    "carthage-software/mago": "^1.8",
    "pestphp/pest": "^3.7",
    "pestphp/pest-plugin-watch": "^3.0",
    "symfony/var-dumper": "^7.2"
  },
  "scripts": {
    "test": "./vendor/bin/pest",
    "test:watch": "./vendor/bin/pest --watch",
    "test:coverage": "php -d zend_extension=/Applications/Herd.app/Contents/Resources/xdebug/xdebug-$(php -r 'echo PHP_MAJOR_VERSION . PHP_MINOR_VERSION;')-arm64.so -d xdebug.mode=coverage ./vendor/bin/pest --coverage --coverage-html ./tests/reports",
    "test:ci": "./vendor/bin/pest --coverage-clover coverage.xml",
    "post-install-cmd": [
      "pnpm install"
    ],
    "lint": "./vendor/bin/mago lint --fix",
    "format": "./vendor/bin/mago format",
    "analyse": "./vendor/bin/mago analyse",
    "mago:pipeline": [
      "mago lint",
      "mago format",
      "mago analyze"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "carthage-software/mago": true,
      "pestphp/pest-plugin": true
    }
  }
}
